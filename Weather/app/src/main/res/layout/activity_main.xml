<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb_loading"
        android:layout_centerInParent="true"
        android:visibility="gone">

    </ProgressBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/rl_main_layout">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/cv_toolbar"
            android:elevation="@dimen/padding_x_large">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl_toolbar"
                android:background="@color/purple_200">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="@dimen/padding_large"
                    app:cardCornerRadius="@dimen/padding_x_small">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/et_get_city_name"
                        android:hint="@string/search_places"
                        android:drawableStart="@drawable/baseline_search_black_24dp"
                        android:drawablePadding="@dimen/padding_large"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:paddingStart="@dimen/padding_large"
                        android:paddingEnd="@dimen/padding_large"
                        android:drawableTint="@color/black"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:autofillHints="">
                    </EditText>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_sub_layout"
            android:layout_below="@+id/cv_toolbar">

            <!-- <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"> -->

            <ImageView
                android:id="@+id/iv_notFavoris"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginLeft="350dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="23dp"
                android:foregroundGravity="center"
                android:translationZ="2dp"
                app:srcCompat="@drawable/favorite" />

            <ImageView
                android:id="@+id/iv_favoris"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginLeft="350dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="23dp"
                android:foregroundGravity="center"
                android:translationZ="2dp"
                app:srcCompat="@drawable/star"
                android:visibility="gone">

            </ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/iv_weather_bg"
                android:src="@drawable/snow_bg_img">

            </ImageView>

            <Spinner
                android:id="@+id/sp_favoris"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_spinner">

            </Spinner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginStart="@dimen/padding_x_large"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_date_and_time"
                    android:textColor="@color/black"
                    android:text="@string/demo_date">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_large"
                    android:orientation="horizontal" >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_day_max_temp"
                        android:layout_weight="3"
                        android:textColor="@color/white"
                        android:text="@string/day"
                        android:textSize="@dimen/text_large">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_day_min_temp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="@string/day"
                        android:textSize="@dimen/text_large">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_large"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_temp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="@string/main_temp"
                        android:textSize="@dimen/text_super_large">

                    </TextView>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="@dimen/padding_large"
                        android:layout_marginEnd="@dimen/padding_large"
                        android:id="@+id/iv_weather_icon"
                        android:src="@drawable/sun">

                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_large"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_feels_lke"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/feels_alike"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_large">

                        </TextView>

                        <TextView
                            android:id="@+id/tv_weather_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="@string/weather_type"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_large">

                        </TextView>
                    </LinearLayout>


                </LinearLayout>




            </LinearLayout>

            <!--</FrameLayout> -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                tools:context=".MainActivity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- ViewPager2 en haut -->
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    
                    <!-- TabLayout en bas -->
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        app:tabGravity="fill"
                        app:tabMode="fixed"
                        app:tabIndicatorHeight="3dp"/>

                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>