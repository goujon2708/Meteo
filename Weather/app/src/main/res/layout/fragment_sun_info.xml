<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".SunInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_sunrise_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/sunrise" />

        <TextView
            android:id="@+id/tv_sunrise_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lever du soleil"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tv_sunrise_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textSize="24sp"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/iv_sunset_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/sunsets" />

        <TextView
            android:id="@+id/tv_sunset_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coucher du soleil"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tv_sunset_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textSize="24sp"
            android:layout_marginStart="16dp" />

    </LinearLayout>

</LinearLayout>
