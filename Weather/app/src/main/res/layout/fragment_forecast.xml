<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date"
            android:textSize="18sp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Max"
            android:textSize="18sp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Min"
            android:textSize="18sp"
            android:textColor="@android:color/white" />
        

    </LinearLayout>

    <!-- Day 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/day1_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demain"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/day1_temp_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/day1_temp_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_weight="1" />


        <ImageView
            android:id="@+id/day1_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Day 2 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/day2_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demain"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/day2_temp_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/day2_temp_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/day2_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>


    <!-- Day 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/day3_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demain"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/day3_temp_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/day3_temp_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/day3_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>



</LinearLayout>
